<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.estoquefx.controller.SelecaoEstoqueController"
      alignment="CENTER" spacing="20" prefWidth="500" prefHeight="400"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Selecione um Estoque" style="-fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24"/>
        </font>
    </Label>

    <Region VBox.vgrow="SOMETIMES" minHeight="20"/>

    <!-- Lista de estoques -->
    <ListView fx:id="listaEstoques" VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAbrir" text="Abrir Estoque" onAction="#onAbrirEstoque"
                prefWidth="150" prefHeight="40"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Button fx:id="btnNovo" text="Criar Novo Estoque" onAction="#onNovoEstoque"
                prefWidth="150" prefHeight="40"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Label fx:id="lblStatus" text="" style="-fx-text-fill: #e74c3c;"/>

</VBox>
