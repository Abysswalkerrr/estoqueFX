<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>desktop-updater-parent</artifactId>
    <groupId>com.estoquefx</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>desktop-app</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.estoquefx.Launcher</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.estoquefx.Launcher</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.6</version>
        <configuration>
          <name>SistemaEstoqueFX</name>
          <mainJar>desktop-app-1.0.0.jar</mainJar>
          <mainClass>com.estoquefx.Launcher</mainClass>
          <destination>${project.build.directory}/installer</destination>
          <type>msi</type>
          <winShortcut>true</winShortcut>
          <winMenu>true</winMenu>
          <arguments>
            <argument>--add-exports</argument>
            <argument>javafx.base/com.sun.javafx.event=ALL-UNNAMED</argument>
            <argument>javafx.controls/com.sun.javafx.scene.control.behavior=ALL-UNNAMED</argument>
            <argument>javafx.controls/com.sun.javafx.scene.control=ALL-UNNAMED</argument>
            <argument>javafx.base/com.sun.javafx.binding=ALL-UNNAMED</argument>
            <JavaOptions>
              <option>-Dfile.encoding=UTF-8</option>
              <option>-Dsun.jnu.encoding=UTF-8</option>
            </JavaOptions>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
    <maven.compiler.targetEncoding>UTF-8</maven.compiler.targetEncoding>
    <maven.compiler.target>25</maven.compiler.target>
    <maven.compiler.source>25</maven.compiler.source>
    <maven.compiler.sourceEncoding>UTF-8</maven.compiler.sourceEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
</project>
